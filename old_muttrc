color   message     green   black
color   attachment  brightgreen black

color   header	     yellow	           default	^Subject
color   header	     green	           default	^From
color   header	     white	           default	^Date
color   header	     blue	           default	^Message-ID
color   header	     red	           default	^X-Mailer
color   header	     red	           default	^User-Agent
color   body	     magenta           default "(ftp|http|https)://[^ ]+" # point out URLs
color   body	     cyan	           default	[-a-z_0-9.]+@[-a-z_0-9.]+ # e-mail addresses

